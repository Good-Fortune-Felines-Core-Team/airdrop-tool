{
	"compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "paths": {
            "@app/constants": ["src/constants"],
            "@app/types": ["src/types"],
            "@app/utils": ["src/utils"]
        },
        "resolveJsonModule": true,
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "target": "ESNext"
	},
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
